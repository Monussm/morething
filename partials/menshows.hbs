<div class="container mt-5">
    <h4>Men Top Wear</h4>
    <p><strong>Showing 1-20</strong>out of 10000 products</p>
    <div class="row">
            {{#each data}}
           <div class="col-md-3 col-sm-6">
            <div class="card border rounded mx-auto mt-2">
                <img class="productimage" src="../Image/{{photo}}">
                <h5 class="mt-3 text-center">{{ProductName}}</h5>
                <p class="mt-3 text-center ProductDetails">{{ProductDetails}}</p>
                <p class="mt-3 text-center price"><strong>Rs</strong> {{Price}}</p>
                <a class="rating ms-2 mx-auto mt-2 mb-2 text-decoration-none" href="/product/{{id}}">Buy Now</a>
            </div>
        </div>
             {{/each}}
        </div>



    